{
  "expo": {
    "name": "Konnectra",
    "slug": "konnectra",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/konnectra-logo.png",
    "scheme": "konnectra",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos for KYC verification",
        "NSPhotoLibraryUsageDescription": "Upload ID documents for verification",
        "NSMicrophoneUsageDescription": "Voice calls with listeners"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/konnectra-logo.png",
        "backgroundColor": "#FFFBF0"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/konnectra-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/konnectra-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFBF0"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Upload ID documents for KYC verification",
          "cameraPermission": "Take photos for KYC and selfie verification"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
